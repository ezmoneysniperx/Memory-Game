<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="40dp"
            >

            <TextView
                android:id="@+id/txApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Memory Game"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txApp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's Play"
                android:gravity="center"
                android:layout_marginTop="37dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
        <GridLayout
            android:columnCount="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/easyBtn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom1"
                    android:onClick="goToEasy"
                    android:text="EASY 4x4"
                    android:textSize="20dp"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/hardBtn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom1"
                    android:onClick="goToHard"
                    android:text="HARD 6x6"
                    android:textSize="20dp"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Time"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:text="Times\n\n"
                    android:textSize="22sp"
                    android:padding="10sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/Score"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:text="Score\n\n"
                    android:textSize="22sp"
                    android:padding="10sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/Difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:text="Level\n\n"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

            </LinearLayout>

        </GridLayout>
    </LinearLayout>

</ScrollView>